package Projects;

import java.util.Scanner;

public class donutHAPPINESSday {

	/**
	 * @param args
	 */
	public static void main(String[] args) {
		// TODO Auto-generated method stub

		//Yang Lu
		
		Scanner input = new Scanner(System.in);
		
		double rating = 2;
		
		while(rating>=1 && rating<=4)
		{
			System.out.println("How much did you like our jolly golly belly filling donuts?\nPlease rate on a scale of 1-4!!!");
			rating = input.nextDouble();
			System.out.println("Thank you for your feed back!\nEnjoy the rest of your day!")
		}
		System.out.println("Only enter a value between 1 and 4!!!\nHave a nice day.");
		
		
		
	}

}
